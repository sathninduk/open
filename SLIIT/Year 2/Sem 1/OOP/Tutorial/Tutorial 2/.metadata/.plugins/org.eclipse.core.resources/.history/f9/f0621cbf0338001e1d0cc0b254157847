package ex2;

public class Point3D {

	// attributes
	private double x, y, z;
	
	// constructors
	public Point3D() {
		x = 0;
		y = 0;
		z = 0;
	}
	
	public Point3D(double x, double y, double z) {
		this.x = x;
		this.y = y;
		this.z = z;
	}
	
	// setters
	public void setX(double x) {
		this.x = x;
	}
	
	public void setY(double y) {
		this.y = y;
	}
	
	public void setZ(double z) {
		this.z = z;
	}
	
	// getters
	public double getX() {
		return this.x;
	}
	
	public double getY() {
		return this.y;
	}
	
	public double getZ() {
		return this.z;
	}
	
	// methods
	public double distance() {
		return Math.sqrt((x * x) + (y * y) + (z * z));
	}
}
